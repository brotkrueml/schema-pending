{
	"name": "brotkrueml/schema-pending",
	"type": "typo3-cms-extension",
	"description": "Extend the schema extension with pending terms",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Chris MÃ¼ller",
			"role": "Developer"
		}
	],
	"support": {
		"chat": "https://typo3.slack.com/archives/CV36M73D5",
		"issues": "https://github.com/brotkrueml/schema-pending/issues",
		"source": "https://github.com/brotkrueml/schema-pending"
	},
	"keywords": [
		"TYPO3 CMS",
		"TYPO3 extension",
		"JSON-LD",
		"Structured data",
		"SEO",
		"schema.org"
	],
	"require": {
		"php": ">=7.2",
		"ext-json": "*",
		"brotkrueml/schema": "^1.7 || ^2.0",
		"typo3/cms-core": "^9.5.16 || ^10.4 || ^11.5"
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^2.18",
		"typo3/coding-standards": "^0.3"
	},
	"autoload": {
		"psr-4": {
			"Brotkrueml\\SchemaPending\\": "Classes/"
		}
	},
	"config": {
		"sort-packages": true,
		"vendor-dir": ".Build/vendor",
		"bin-dir": ".Build/bin"
	},
	"extra": {
		"branch-alias": {
			"dev-main": "1.2.x-dev"
		},
		"typo3/cms": {
			"extension-key": "schema_pending",
			"app-dir": ".Build",
			"web-dir": ".Build/web"
		}
	},
	"scripts": {
		"fix-cs": ".Build/bin/php-cs-fixer fix",
		"zip": "grep -Po \"(?<='version' => ')([0-9]+\\.[0-9]+\\.[0-9]+)\" ext_emconf.php | xargs -I {version} sh -c 'mkdir -p ../zip; git archive -v -o \"../zip/${PWD##*/}_{version}.zip\" v{version}'"
	}
}
